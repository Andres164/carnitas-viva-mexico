	--CREACION DE TABLAS--
	CREATE TABLE Productos(
	ID_PRODUCTO SERIAL PRIMARY KEY,
	NOMBRE_PRODUCTO VARCHAR(50),
	PRECIO_VENTA FLOAT,
	UNIDAD_VENTA VARCHAR(10)
	);
	
	CREATE TABLE DetallesDeElavoracion(
	ID_DETALLEELABORACION SERIAL PRIMARY KEY,
	ID_PRODUCTO INT,
	ID_INSUMO INT,
	CANTIDAD_DEL_INSUMO FLOAT,
	UNIDAD_MEDIDA VARCHAR(15)
	);
	
	CREATE TABLE Insumos(
	ID_INSUMO SERIAL PRIMARY KEY,
	ID_PROVEEDOR INT,
	NOMBRE_INSUMO VARCHAR(50),
	STOCK FLOAT,
	PRECIO_DE_COMPRA FLOAT
	);
	
	CREATE TABLE Proveedores(
	ID_PROVEEDOR SERIAL PRIMARY KEY,
	NOMBRE VARCHAR(50),
	TELEFONO VARCHAR(10)
	);
	
	CREATE TABLE DetallesDeVenta(
	ID_DETALLEVENTA SERIAL PRIMARY KEY,
	ID_VENTA INT,
	ID_PRODUCTO INT,
	CANTIDAD_PRODUCTO FLOAT
	);
	
	CREATE TABLE Ventas(
	ID_VENTA SERIAL PRIMARY KEY,
	TOTAL_VENTAS FLOAT,
	FECHA_VENTA DATE
	);
	
	CREATE TABLE Usuarios(
	USUARIO VARCHAR(30) PRIMARY KEY,
	PASSWORD VARCHAR(30)
	)